{{>layout/header}}

    <h1>스프링 부트로 시작하는 웹 서비스 Ver.2</h1>
    <div class="col-md-12">
        <!--로그인 기능 영역-->
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                {{#userName}}
                    Longged in as: <span id="user">{{userName}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                    <!--스프링 시큐리티에서 기본 제공하는 로그아웃 url. 따로 구현할 필요없음.-->
                {{/userName}}
                {{^userName}}
                <!--userName값이 존재하지 않는 경우-->
                    <a href="/oauth2/authorization/google" class="btn bnt-success active" role="button">Google Login</a>
                    <!--스프링 시큐리티에서 기본 제공하는 로그인 url. 따로 구현할 필요없음.-->
                    <a href="/oauth2/authorization/naver" class="btn btn-secondary active" role="button">Naver Login</a>
                    <!--네이버 로그인 url은 application-oauth.properties에 등록한 redirect-uri값에 맟춰짐. 마지막 값만 각 소셜 로그인 코드를 쓰면 됨.-->
                {{/userName}}
            </div>
        </div>
        <br>
        <!--목록 출력 영역-->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th>게시글번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}} <!--posts라는 List를 순회함. for문과 같음.-->
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}